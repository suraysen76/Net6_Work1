@model Student


<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Add Student</h2>
    </div>

    <form method="post">
        <div asp-validation-summary="All"></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="FirstMidName">Student First Name</label>
                <input type="text" class="form-control mb-3" asp-for="FirstMidName" placeholder="Enter Name">
                <span asp-validation-for="FirstMidName" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="LastName">Student Last Name</label>
                <input type="text" class="form-control mb-3" asp-for="LastName" placeholder="Enter Name">
                <span asp-validation-for="LastName" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="EnrollmentDate">Enrollment Date</label>
                <input type="text" class="form-control mb-3" asp-for="EnrollmentDate" placeholder="Enter Enrollment Date">
                <span asp-validation-for="EnrollmentDate" class=" alert-danger"></span>
            </div>
        </div>
        


        <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Save</button>
        <a asp-controller="Student" asp-action="Index" class="btn btn-lg btn-warning p-2">Back To List</a>
    </form>

</div>


@*//for front end validations*@

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}